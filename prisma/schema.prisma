generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SearchHistory {
  id             String   @id @default(cuid())
  userId         String   // Clerk User ID
  advertiserName String
  advertiserId   String?
  category       String?
  totalAds       Int?
  activeAds      Int?
  searchedAt     DateTime @default(now())

  @@index([userId])
  @@index([searchedAt])
}
